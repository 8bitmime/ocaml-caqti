; Fake META Files

(alias
 ((name drivers)
  (deps (META.caqti
         ../lib/caqti.cma
         ../lib/caqti.cmxs))))
(rule
 ((targets (META.caqti))
  (deps (../META.caqti))
  (action
   (with-stdout-to ${@}
    (progn
      (echo "directory = \"../lib\"\n")
      (cat ${<}))))))

(alias
 ((name drivers)
  (package caqti-driver-mariadb)
  (deps (META.caqti-driver-mariadb
         ../lib/caqti_driver_mariadb.cma
         ../lib/caqti_driver_mariadb.cmxs))))
