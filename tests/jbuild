(jbuild_version 1)

(library
 ((name testkit)
  (modules (Testkit))
  (wrapped false)
  (libraries (dynlink uri))))

; Basic Tests

(alias ((name runtest) (deps (test_heap.exe)) (action (run ${<}))))
(executable
 ((name test_heap)
  (modules (Test_heap))
  (libraries (caqti testkit))))

(alias
 ((name runtest)
  (package caqti-lwt)
  (deps (test_pool_lwt.exe))
  (action (run ${<}))))
(executable
 ((name test_pool_lwt)
  (modules (Test_pool_lwt))
  (libraries (caqti_lwt testkit))))

; Tests Using DBs

(alias
 ((name runtest)
  (package caqti-lwt)
  (deps (bikereg.exe (alias drivers)))
  (action (setenv OCAMLPATH . (run ${<})))))
(executable
 ((name bikereg)
  (modules (Bikereg))
  (libraries (caqti caqti_lwt testkit))))

(alias
 ((name runtest)
  (package caqti-lwt)
